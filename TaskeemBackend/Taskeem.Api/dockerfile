# =========================
# Build stage
# =========================
FROM mcr.microsoft.com/dotnet/sdk:10.0-preview AS build
WORKDIR /src

# Copy solution and projects
COPY TaskeemBackend.slnx ./
COPY Taskeem.Api/Taskeem.Api.csproj ./Taskeem.Api/
COPY Taskeem.Domain/Taskeem.Domain.csproj ./Taskeem.Domain/
COPY Taskeem.Domain.EF/Taskeem.Domain.EF.csproj ./Taskeem.Domain.EF/
COPY Taskeem.Domain.EF.Tests/Taskeem.Domain.EF.Tests.csproj ./Taskeem.Domain.EF.Tests/

# Restore packages
RUN dotnet restore Taskeem.Api/Taskeem.Api.csproj

# Copy all source code
COPY . .

RUN dotnet publish Taskeem.Api/Taskeem.Api.csproj -c Release -o /app/publish

# =========================
# Runtime stage
# =========================
FROM mcr.microsoft.com/dotnet/aspnet:10.0-preview AS runtime
WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

EXPOSE 8080

COPY --from=build /app/publish .

ENTRYPOINT ["dotnet", "Taskeem.Api.dll"]
